{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}

    <div class="container-xxl my-md-4 bd-layout">
        <h1>Client</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ client.name }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ client.surname }}</td>
                </tr>
                <tr>
                    <th>Birthdate</th>
                    <td>{{ client.birthdate ? client.birthdate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Nie</th>
                    <td>{{ client.nie }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ client.address }}</td>
                </tr>
                <tr>
                    <th>Postalcode</th>
                    <td>{{ client.postalcode }}</td>
                </tr>
                <tr>
                    <th>Town</th>
                    <td>{{ client.town }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ client.city }}</td>
                </tr>
                <tr>
                    <th>Province</th>
                    <td>{{ client.province }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ client.country }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('client_index') }}">back to list</a>

        <div class="row justify-content-md-center">
            
            <div class="col-md-4">
                <div class="d-grid">
                    <a class="btn btn-primary" href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </div>
            </div>

            <div class="col-md-4">
                {{ include('client/_delete_form.html.twig') }}
            </div>

        </div>

    </div>
    
{% endblock %}
