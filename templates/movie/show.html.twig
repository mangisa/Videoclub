{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}

    <div class="container-xxl my-md-4 bd-layout">
        <h1>Movie</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ movie.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ movie.title }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ movie.duration }}</td>
                </tr>
                <tr>
                    <th>Director</th>
                    <td>{{ movie.director }}</td>
                </tr>
                <tr>
                    <th>Release Date</th>
                    <td>{{ movie.releaseDate? movie.releaseDate|date('d/m/Y') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('movie_index') }}">back to list</a>

        <div class="row justify-content-md-center">
            
            <div class="col-md-4">
                <div class="d-grid">
                    <a class="btn btn-primary" href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
                </div>
            </div>

            <div class="col-md-4">
                {{ include('movie/_delete_form.html.twig') }}
            </div>

        </div>
        
    </div>
    
{% endblock %}
