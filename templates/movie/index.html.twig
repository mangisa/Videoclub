{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}

<div class="container-xxl my-md-4 bd-layout">

    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Director</th>
                <th>releaseDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.director }}</td>
                <td>{{ movie.releaseDate? movie.releaseDate|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movie_new') }}">Create new</a>

</div>

{% endblock %}